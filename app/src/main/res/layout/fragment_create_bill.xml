<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Monthly Bill Title -->
    <TextView
        android:id="@+id/monthlyBillTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monthly Bill"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- Cardview for the bill -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <!-- Bill contents -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Water Bill Preview-->
            <TextView
                android:id="@+id/waterBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Bill: "
                android:textSize="16sp" />

            <!-- Gas Bill Preview-->
            <TextView
                android:id="@+id/gasBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gas Bill: "
                android:textSize="16sp" />

            <!-- Electricity Bill Preview-->
            <TextView
                android:id="@+id/electricityBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electricity Bill: "
                android:textSize="16sp" />

            <!-- WiFi Bill Preview-->
            <TextView
                android:id="@+id/wifiBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wi-Fi Bill: "
                android:textSize="16sp" />

            <!-- Service Fee Preview-->
            <TextView
                android:id="@+id/serviceFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Fee: "
                android:textSize="16sp" />

            <!-- Total Bill Preview-->
            <TextView
                android:id="@+id/totalBill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Bill: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

